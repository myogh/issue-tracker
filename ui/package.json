{
  "name": "issue-tracker-ui",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "#start": "UI server. HMR is enabled in dev mode",
    "start": "nodemon -w dist dist/server.js",
    "watch": "webpack --watch",
    "#compile": "Generate JS bundles for production",
    "compile": "webpack --mode production",
    "lint": "eslint server src browser --ext js,jsx",
    "#watch-server-hmr": "Recompile server HMR bundle on changes.",
    "watch-server-hmr": "webpack -w --config webpack.serverHMR.js",
    "#dev-all": "Dev mode: watch for server changes and start UI server",
    "dev-all": "rm dist/* && npm run watch-server-hmr & sleep 5 && npm start",
    "#dev": "Dev mode: without HMR",
    "dev": "rm dist/* && npm run watch & sleep 5 && npm start"
  },
  "author": "amh.rav@gmail.com",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bootstrap": "^3.4.1",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.21.0",
    "isomorphic-fetch": "^3.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-bootstrap": "^0.33.1",
    "react-dom": "^16.14.0",
    "react-router-bootstrap": "^0.25.0",
    "react-router-dom": "^5.2.0",
    "serialize-javascript": "^5.0.1",
    "url-search-params-polyfill": "^8.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.1",
    "@babel/preset-env": "^7.13.0",
    "@babel/preset-react": "^7.12.13",
    "babel-loader": "^8.2.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "nodemon": "^2.0.12",
    "webpack": "^5.51.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.3",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^3.0.0"
  }
}
